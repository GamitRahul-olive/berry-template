{% style %}
  .sign-up-popup .modal-header{position: absolute; top: 15px; right: 15px; background-color:transparent; z-index:99999; border: unset;}
  .sign-up-popup .signup-img img{border-radius: 12px 0px 0px 12px;}
  .sign-up-popup .modal-body{padding: 0px!important;}
  .sign-up-popup .modal-dialog{max-width: 900px; overflow: hidden;}
  .sign-up-popup .modal-content{border-radius:12px; border: 0px;}
  .sign-up-popup .signup-box-content{padding: 100px 35px 0px 20px;}
  .sign-up-popup .signup-box-content form{margin-top: 60px;}
  .sign-up-popup .sign-up-content{margin-bottom: 28px;}
  .sign-up-popup .signup-icon{display: flex; justify-content: space-between; align-items: center; position: absolute; bottom: 25px; left: 15px; right: 45px;}
  .sign-up-popup .signup-icon a{font-weight: 500; font-size: 14px; line-height: 20px; color: #212121; display: flex; align-items: center;}
  .sign-up-popup .signup-icon a svg{margin-right:10px;}
  .sign-up-popup .sign-up-content h4{font-weight: 900; font-size: 24px; line-height: 28px; color: #212121; margin-bottom: 8px;}
  .sign-up-popup .sign-up-content p{font-weight: 400; font-size: 12px; line-height: 20px; color: #616161;}
  .sign-up-popup p{font-weight: 400; font-size: 14px; line-height: 22px; color: #616161;}
  .sign-up-popup form .email-signup{background-color: #FAFAFA; border: 1px solid #00000023; border-radius: 12px; font-weight: 500; font-size: 14px; line-height: 20px;
                                   color: #616161; width: 265px; margin-right: 5px;}
  .sign-up-popup form .submit{background-color: #2196F3; border-radius: 4px; font-weight: 500; font-size: 14px; line-height: 20px; color: #FFFFFF; border: 1px solid #2196F3;
                             padding: 11px 24px;}

  @media(max-width:991px){
    .sign-up-popup .modal-content{ margin: 15px;} 
    .sign-up-popup .signup-box-content form { margin-top: 40px; }
    .sign-up-popup form .email-signup{margin-bottom:15px;}
  }

   @media(max-width:767px){
     .sign-up-popup .signup-box-content {padding: 40px 10px 70px 10px;}
     .sign-up-popup .sign-up-content { margin-bottom: 15px; }
     .sign-up-popup .signup-box-content form { margin-top: 15px;}
     .sign-up-popup .modal-content{padding: 10px;}
     .sign-up-popup .modal-content .row{align-items:center;}
     .sign-up-popup .signup-img img { border-radius: 12px; }
     .sign-up-popup .signup-icon a svg { margin-right: 5px; }
   }

   @media(max-width:660px){
     .sign-up-popup .row .col-12{width:100%;}
     .sign-up-popup .signup-img{text-align:center;}
     .sign-up-popup .signup-box-content { padding: 20px 10px 120px 10px; }
     .sign-up-popup .signup-icon{display: block;}
     .sign-up-popup .signup-icon a{margin-bottom: 10px;}
     .sign-up-popup .modal{top: 20px;}
     .sign-up-popup .modal-header .btn-close{background-color: #FFFFFF;} 
   }
  
{% endstyle %}  

<div class="sign-up-popup">
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
    Launch demo modal
  </button>
  
  <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div> 
        <div class="modal-body">
          <div class="row m-0">
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-5 col-12 p-0">
              <div class="signup-img">
                <img src="https://cdn.shopify.com/s/files/1/0554/7927/1557/files/signup-img.jpg?v=1672313419">
              </div>
            </div>
            <div class="col-xxl-6 col-xl-6 col-lg-6 col-md-6 col-sm-7 col-12 p-0 position-relative signup-news-popup">
              <div class="signup-box-content">
                <div class="sign-up-content">
                  <h4>{{ settings.newletter_popup_title }}</h4>
                  <p>{{ settings.newsletter_text }}</p>
                </div>
                <p>Subscribe to our newsletters and donâ€™t miss new arrivals, the latest fashion updates and our promotions.</p>
                {% form 'customer' %}
                  {{ form.errors | default_errors }}
                    {% if form.posted_successfully? %}
                      <p class="form--success">{{ 'general.newsletter_form.confirmation' | t }}</p>
                    {% else %}
                      <div class="input-group password__input-group">
                        <input type="hidden" name="contact[tags]" value="newsletter">
                        <input type="email"
                          name="contact[email]"
                          id="Email"
                          class="input-group__field newsletter__input"
                          value="{% if customer %}{{ customer.email }}{% endif %}"
                          placeholder="{{ 'general.newsletter_form.email_placeholder' | t }}"
                          autocorrect="off"
                          autocapitalize="off"
                        >
                        <span class="input-group__btn">
                          <button type="submit" class="btn newsletter__submit" name="commit" id="Subscribe">
                            <span class="newsletter__submit-text--large">{{ 'general.newsletter_form.submit' | t }}</span>
                          </button>
                        </span>
                      </div>
                    {% endif %}
                  {% endform %}
